runcmd:
  - echo '{{ ds.meta_data.role }}' > /etc/role
  - echo '{{ ds.meta_data.aenv }}' > /etc/aenv
  - update-grub
  - apt autoremove -y
  - apt-get install software-properties-common
  - apt update
  - chown -R git.git /data/git
  - cp /root/.ssh/authorized_keys /tmp/sandholm.pub
  - chmod +r /tmp/sandholm.pub
  - sudo -u git gitolite setup --pubkey /tmp/sandholm.pub
  - touch /etc/cloud/cloud-init.disabled
  - eject
  - shutdown -h now
